    <filter>
        <filter-name>myFilter</filter-name>
        <filter-class>javaweb.filter.MyFilter</filter-class>
        <init-param>
            <param-name>Site</param-name>
            <param-value>菜鸟网站</param-value>
        </init-param>
        <init-param>
            <param-name>date</param-name>
            <param-value>2017-09-19</param-value>
        </init-param>
        <init-param>
